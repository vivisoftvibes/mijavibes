# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (Supabase)
DB_HOST=your-supabase-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-db-password

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:3000,https://salud-aldia.com

# Logging
LOG_LEVEL=info

# Rate Limiting (disabled in development)
# RATE_LIMIT_ENABLED=true

# External Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Agora (for video calls)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# Pharmacy API (example)
PHARMACY_API_KEY=your-pharmacy-api-key
PHARMACY_API_URL=https://api.pharmacy-partner.com

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
